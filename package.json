{
  "name": "@garoon/mcp-server",
  "version": "0.1.0",
  "private": true,
  "description": "The official MCP Server for Garoon",
  "keywords": [
    "garoon",
    "mcp",
    "modelcontextprotocol"
  ],
  "homepage": "https://github.com/garoon/garoon-mcp-server",
  "bugs": {
    "url": "https://github.com/garoon/garoon-mcp-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garoon/garoon-mcp-server.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Cybozu, Inc.",
    "url": "https://cybozu.co.jp"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "garoon-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "./scripts/run-inspector.sh",
    "prebuild": "node scripts/generate-build-constants.js",
    "build": "tsc",
    "build:dxt": "./scripts/build-dxt.sh",
    "check:dxt": "dxt validate .",
    "clean": "pnpm \"/^clean:.*/\"",
    "clean:dist": "rm -rf dist",
    "clean:dxt": "rm -rf build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:prettier": "prettier --check '**/*.{json,json5,md,yml,yaml}' --cache",
    "fix": "pnpm run \"/^fix:.*/\"",
    "fix:eslint": "pnpm lint:eslint --fix",
    "fix:prettier": "pnpm lint:prettier --write",
    "license:analyze": "license-manager analyze -c license-manager.config.cjs",
    "license:extract": "license-manager extract -c license-manager.config.cjs",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.5.1",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "undici": "^7.12.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@anthropic-ai/dxt": "^0.2.6",
    "@cybozu/eslint-config": "^24.3.0",
    "@cybozu/license-manager": "^1.3.1",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef",
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
