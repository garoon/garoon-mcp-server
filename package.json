{
  "name": "@garoon/mcp-server",
  "version": "1.0.1",
  "description": "The official MCP Server for Garoon",
  "keywords": [
    "garoon",
    "mcp",
    "modelcontextprotocol"
  ],
  "homepage": "https://github.com/garoon/garoon-mcp-server",
  "bugs": {
    "url": "https://github.com/garoon/garoon-mcp-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garoon/garoon-mcp-server.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Cybozu, Inc.",
    "url": "https://cybozu.co.jp"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "garoon-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "./scripts/run-inspector.sh",
    "prebuild": "node scripts/generate-build-constants.js",
    "build": "tsc",
    "build:mcpb": "./scripts/build-mcpb.sh",
    "check:mcpb": "mcpb validate .",
    "clean": "pnpm \"/^clean:.*/\"",
    "clean:dist": "rm -rf dist",
    "clean:mcpb": "rm -rf build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:prettier": "prettier --check '**/*.{json,json5,md,yml,yaml}' --cache",
    "fix": "pnpm run \"/^fix:.*/\"",
    "fix:eslint": "pnpm lint:eslint --fix",
    "fix:prettier": "pnpm lint:prettier --write",
    "license:analyze": "license-manager analyze -c license-manager.config.cjs",
    "license:extract": "license-manager extract -c license-manager.config.cjs",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.5.1",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "undici": "^7.16.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^2.1.2",
    "@cybozu/eslint-config": "^24.3.0",
    "@cybozu/license-manager": "^1.4.0",
    "@types/node": "^25.0.6",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316"
}
